<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_with model: @post do |form| %>
      <div class="form">
        <div class="form-body">
          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <%= form.text_field :content, value: @post.content %>
          <%= form.submit "保存" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
