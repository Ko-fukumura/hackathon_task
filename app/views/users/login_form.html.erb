<div class="main users-new">
  <div class="container">
    <%= form_with model: @user, local: true do |form| %>
      <div class="form users-form">
        <div class="form-body">
          <% if @error_message %>
            <div class="form-error">
              <%= @error_message %>
            </div>
          <% end %>
          <%= form.label :email, value: "メールアドレス" %>
          <%= form.email_field :email, value: @email %>
          <%= form.label :password, value: "パスワード" %>
          <%= form.password_field :password, value: @password %>
          <%= form.submit "ログイン" %>
        </div>
      </div>
    <% end %>
  </div>
</div>